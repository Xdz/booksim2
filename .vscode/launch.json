    "version": "0.1.0",
    "configurations": [
        {
            "name": "debuger-gdb",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/BookSim",
            "args": ["src/examples/cmeshconfig"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerArgs": "",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                },
                {
                    "description": "将反汇编风格设置为 Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": false
                }
            ]
        }

    ]
}
